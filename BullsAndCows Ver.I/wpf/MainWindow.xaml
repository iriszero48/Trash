<Window x:Class="bacwpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bacwpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="510" Width="650">
    <Grid Background="White" Height="480" Width="640">
        <Image x:Name="UI" Margin="0,0,0,0" Source="ui.png" Height="480" Width="640" Visibility="Visible"/>
        <TextBox x:Name="Input" HorizontalAlignment="Left" Height="38" Margin="329,222,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="119" Background="White" FontSize="30" MaxLength="4"/>
        <Button Content="提交" HorizontalAlignment="Left" Margin="448,222,0,0" VerticalAlignment="Top" Width="75" Height="38" FontSize="24" Click="Button_Click"/>
        <Image x:Name="Relus" Margin="0,0,0,0" Source="relus.jpg" Height="480" Width="640" Visibility="Visible" MouseLeftButtonUp="Relus_MouseLeftButtonUp"/>
        <Image x:Name="Start" Margin="0,0,0,0" Source="start.png"  Height="480" Width="640" Visibility="Visible" MouseLeftButtonUp="Start_MouseLeftButtonUp"/>
    </Grid>
</Window>
